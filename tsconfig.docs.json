{
  "extends": "./tsconfig.build.json",
  "include": ["./composites/points/src", "./libraries/points/src"],
  "compilerOptions": {
    "jsx": "preserve",
    "lib": ["DOM", "ES2020"],
    "skipLibCheck": true
  },
  "typedocOptions": {
    "name": "Solutions SDK",
    "plugin": ["typedoc-plugin-markdown"],
    "out": "docs/api",
    "readme": "none",
    "githubPages": false,
    "entryPoints": ["./composites/points/src/index.ts", "./libraries/points/src/index.ts"],
    "excludeExternals": true,
    "excludeInternal": true,
    "excludePrivate": true,
    "hideBreadcrumbs": true
  }
}
